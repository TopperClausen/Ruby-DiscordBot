<div class="bg-white shadow-lg w-1/3 mx-auto py-2">
  <div class="bg-blue-600 text-white">
    <h3 class="text-2xl pl-2 py-5"> LOGIN </h3>
  </div>
  <div class="mx-2">
    <%= simple_form_for @user do |f| %>
      <%= f.input :first_name, input_html: { class: "w-full" } %>
      <%= f.input :last_name, input_html: { class: "w-full" } %>
      <%= f.input :email, input_html: { class: "w-full" } %>
      <%= f.input :password, input_html: { class: "w-full" } %>
      <%= f.input :confirm_password, input_html: { class: "w-full" } %>
      <div>
        <%= f.button :submit, value: "Register", class: "bg-blue-600 text-white px-2 py-1 hover:bg-blue-700 mt-2 mr-3" %>
        <%= link_to "Eller registre dig her", register_path, class: "text-blue-600 hover:text-blue-700", "data-turbolinks-animate-animation": "fadeout" %>
      </div>
    <% end %>
  </div>
</div>